{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2017",
    "module": "esnext",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [ "./src/*" ],
      "@/public*": [ "./public/*" ]
    },
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.js"],
  "exclude": ["node_modules"],
}
